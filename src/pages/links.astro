interface Link {
  url: string;
  text: string;
  icon: string | null;
}

const links: Link[] = [
  {
    url: "https://linkedin.com/in/oniguy4649",
    text: "LinkedIn",
    icon: null,
  },
  {
    url: "https://github.com/oniguy4649",
    text: "GitHub",
    icon: null,
  },
  {
    url: "https://instagram.com/oniguy4649",
    text: "Instagram",
    icon: null,
  },
  {
    url: "https://youtube.com/channel/oniguy4649",
    text: "YouTube",
